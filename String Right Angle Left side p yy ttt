public class StrPattern { 
    public static void main(String[] args) {
        String str= "Python";
        for (int i = 0; i <str.length(); i++) {
            for (int j = 0; j <=i; j++) {
                System.out.print(str.charAt(i));
            }
            System.out.println("");
        }
    }
}
