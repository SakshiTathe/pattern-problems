import java.util.Scanner;

public class Pattern { 
    public static void main(String[] args) 
    {   
        System.out.print("Enter rows:"); 
        Scanner scanner = new Scanner(System.in);
        int row = scanner.nextInt();
        scanner.close();  
        for (int i = 0; i <= row; i++) {
            for (int j = 1; j <=i; j++) {
                System.out.print(j);
              }
            System.out.println("");
          }
    }
}
Enter rows:5

1
12
123
1234
12345
